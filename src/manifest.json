{
    "manifest_version": 2,
    "name": "JPDB Browser Reader",
    "version": "0.0.3",
    "description": "JPDB parsing and mining in your browser",
    "icons": {
        "16": "icons/logo_16.png",
        "24": "icons/logo_24.png",
        "32": "icons/logo_32.png",
        "48": "icons/logo_48.png",
        "64": "icons/logo_64.png",
        "96": "icons/logo_96.png",
        "128": "icons/logo_128.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "icons/logo_16.png",
            "24": "icons/logo_24.png",
            "32": "icons/logo_32.png",
            "48": "icons/logo_48.png",
            "64": "icons/logo_64.png",
            "96": "icons/logo_96.png",
            "128": "icons/logo_128.png"
        },
        "default_title": "JPDB Browser Reader",
        "default_popup": "browser_popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://reader.ttsu.app/*", "*://ttu-ebook.web.app/*"],
            "js": ["content/ttu_inject.js"],
            "css": ["content/word.css"]
        }
    ],
    "background": {
        "page": "background/background.html",
        "persistent": true
    },
    "web_accessible_resources": [
        "content/contextmenu.js",
        "content/ttu.js",
        "content/content.js",
        "content/dialog.js",
        "content/popup.js",
        "content/word.css",
        "content/popup.css",
        "content/dialog.css",
        "util.js"
    ],
    "permissions": [
        "tabs",
        "activeTab",
        "contextMenus",
        "*://jpdb.io/*",
        "*://reader.ttsu.app/*",
        "*://ttu-ebook.web.app/*"
    ]
}
