{
  "insertPragma": false,
  "requirePragma": false,

  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,

  "embeddedLanguageFormatting": "auto",
  "htmlWhitespaceSensitivity": "css",
  "proseWrap": "preserve",

  "semi": true,
  "bracketSpacing": true,
  "bracketSameLine": true,
  "arrowParens": "avoid",
  "singleQuote": true,
  "jsxSingleQuote": true,
  "quoteProps": "as-needed",
  "singleAttributePerLine": false,
  "trailingComma": "all"
}
